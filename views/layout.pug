doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title=title
    description=description
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
  body
    header
      nav.navbar.navbar-expand-lg.bg-body-tertiary
        .container-fluid
          a.navbar-brand(href='/') Clean Diet
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarText' aria-controls='navbarText' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarText.collapse.navbar-collapse
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
              //- Menu temporarily hidden
              //- li.nav-item
              //-   a.nav-link.active(aria-current='page' href='/') Home
            if authorised
              form(method='POST', action='/api/auth/logout')
                button.btn.btn-link(type='submit') Log Out
            else
              div
                a.btn.btn-link(href="/login")
                  | Sign in
                a.btn.btn-primary(href="/sign-up")
                  | Sign Up
    block content
    footer
